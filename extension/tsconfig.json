{
  "module": {
    "module": "system",
    "sourceMap": true,
    "target": "ES2017"
  },
  "compilerOptions": {
    "lib": [
      "es2017",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types",
      "node_modules/web-ext-types"
    ],
    "outDir": "./build/unpacked",
    "module": "commonjs",
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
